<div class="container">

<p>
  <strong>User:</strong>
  <%= @tweet.user.email %>
</p>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>
<% if @tweet.user == current_user %>
  <%= link_to 'Edit', edit_tweet_path(@tweet) %>
  <%= link_to 'Delete', @tweet, method: :delete  %>
<% end %>
<%= link_to 'Back', tweets_path %>
</div>